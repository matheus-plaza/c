//1
#include <stdio.h>

int main()
{
    float media;
    
    media = ((0+8+10) / 3);
    
    printf("a média de 0,8,10 é de : ");
    printf("%0.2f\n", media);
    
    return 0;
}

//2
#include <stdio.h>

int main()
{
    int base, altura, area, perimetro;
    
    printf("digite a base do retangulo: ");
    scanf("%d", &base);
    
    printf("digite a altura do retangulo: ");
    scanf("%d", &altura);
    
    perimetro = ((base + altura) * 2);
    area = base * altura;
    
    printf("o perimetro do retangulo é de: %d\n", perimetro);
    printf("a area do retangulo é de: %d\n", area);
       
   return 0;
}

    //3
#include <stdio.h>

int main()
{
    char nome[20];
    float preçoC, preçoV;

    printf("digite o nome do produto: ");
    scanf("%s", nome);
    
    printf("digite o preço de custo do produto: ");
    scanf("%f", &preçoC);
    
    preçoV = (preçoC +(preçoC * 0.65));
    
    printf("O preço de venda do produto %s será de : %0.2f\n", nome, preçoV);
    
   return 0;
}

//4
#include <stdio.h>
#include<math.h>

int main()
{
    
   float valorE, qtdParcelas, valorFinal;
    
    printf("quanto você quer emprestado?: ");
    scanf("%f", &valorE);
    
    printf("Em quantos meses você planeja pagar?: ");
    scanf("%f", &qtdParcelas);
    
    valorFinal = valorE * pow(1+0.02, qtdParcelas);
    
    printf("Este é o valor final que devera pagar após o júros: %0.2f\n", valorFinal);
    
    return 0;
}

//5
#include <stdio.h>

int main()
{
    
   float valorP, descontoD, valorFinal, valorD;
    
    printf("qual valor do produto?: ");
    scanf("%f", &valorP);
    
    printf("qual porcentagem de desconto?: ");
    scanf("%f", &descontoD);
    
    valorD = ((descontoD / 100) * valorP); 
    valorFinal = valorP - valorD ;
    
    printf("Este é o valor do desconto: %0.2f\n", valorD);
    printf("O valor final do produto será de %0.2f\n", valorFinal);
    
    return 0;
}


//6
#include <stdio.h>

int main()
{
    
   float valorS, reajuste, SalarioF;
    
    printf("qual valor salario atual?: ");
    scanf("%f", &valorS);
    
    printf("qual porcentagem do reajuste?: ");
    scanf("%f", &reajuste);
    
    SalarioF = valorS + ((reajuste / 100) * valorS); 
    
    printf("Este é o valor do salario atual: %0.2f\n", SalarioF);
   
    return 0;
}


//7

#include <stdio.h>

int main()
{
    
   float dolar, real, cotação;
    
    printf("digite o valor em dolares: ");
    scanf("%f", &dolar);
    
    printf("digite a quantia de reais que equivalem a um dolar: ");
    scanf("%f", &cotação);
    
   real = dolar * cotação;
   
    printf("Este é o valor em reais: %0.2f\n", real);
    
    return 0;
}

//8

#include <stdio.h>

int main()
{
    
   float saldo, saldoReajustado;
    
    printf("digite o saldo da conta: ");
    scanf("%f", &saldo);
    
   saldoReajustado = saldo + (saldo * 0.02);
   
    printf("Este é o valor com o reajuste: %0.2f\n", saldoReajustado);
    
    return 0;
}

//9
#include <math.h>
#include <stdio.h>

int main()
{
     float numero, quadrado;
     printf("digite um número: ");
     scanf("%f", &numero);
     quadrado = pow (numero,2);
     printf("este é o seu quadrado: %f\n", quadrado);
    return 0;
}

//10
#include <math.h>
#include <stdio.h>

int main()
{
     float numeroReal, quarto;
     printf("digite um número real: ");
     scanf("%f", &numeroReal);
     quarto = numeroReal / 4 ;
     printf("esta é a quarta parte deste número: %0.2f\n", quarto);
    return 0;
}

//1
#include <stdio.h>

int main()
{
    float media;
    
    media = ((0+8+10) / 3);
    
    printf("a média de 0,8,10 é de : ");
    printf("%0.2f\n", media);
    
    return 0;
}

//2
#include <stdio.h>

int main()
{
    int base, altura, area, perimetro;
    
    printf("digite a base do retangulo: ");
    scanf("%d", &base);
    
    printf("digite a altura do retangulo: ");
    scanf("%d", &altura);
    
    perimetro = ((base + altura) * 2);
    area = base * altura;
    
    printf("o perimetro do retangulo é de: %d\n", perimetro);
    printf("a area do retangulo é de: %d\n", area);
       
   return 0;
}

    //3
#include <stdio.h>

int main()
{
    char nome[20];
    float preçoC, preçoV;

    printf("digite o nome do produto: ");
    scanf("%s", nome);
    
    printf("digite o preço de custo do produto: ");
    scanf("%f", &preçoC);
    
    preçoV = (preçoC +(preçoC * 0.65));
    
    printf("O preço de venda do produto %s será de : %0.2f\n", nome, preçoV);
    
   return 0;
}

//4
#include <stdio.h>
#include<math.h>

int main()
{
    
   float valorE, qtdParcelas, valorFinal;
    
    printf("quanto você quer emprestado?: ");
    scanf("%f", &valorE);
    
    printf("Em quantos meses você planeja pagar?: ");
    scanf("%f", &qtdParcelas);
    
    valorFinal = valorE * pow(1+0.02, qtdParcelas);
    
    printf("Este é o valor final que devera pagar após o júros: %0.2f\n", valorFinal);
    
    return 0;
}

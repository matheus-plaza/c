#include <stdio.h>

int main()
{
    float matriz[4][4], media = 0, mediaAluno[4];
    
    int a, b, c, d;
    
    printf("digite 4 notas de 0 a 10\n");
    for(int i=0;i<4;i++){
        for(int j=0;j<4;j++){
            scanf("%f", &matriz[i][j]);
            media+=matriz[i][j];
        }
        mediaAluno[i] = media / 4;
        media = 0;
        printf("\ndigite as quatro notas do aluno %d \n", i + 2);
    }
    
    for(int i=0;i<4;i++){
        printf("a media do aluno %d Ã© %.2f\n", i + 1, mediaAluno[i]);
    }
    
    return 0;
}

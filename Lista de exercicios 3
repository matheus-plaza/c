#include <stdio.h>

int main()
{
    float numero;
    
    printf("digite o numero: ");
    scanf("%f", &numero);
    
    if (numero > 0)
{
    printf("o numero e positivo");
}
    else if (numero < 0)
{
    printf("o numero e negativo");
}
    else
{
    printf("o numero e zero");
}

    return 0;
}

//13
#include <stdio.h>

int main()
{
    char combustivel;
    float litros, total;
  
    printf("qual o combustivel? : Alcool=A, Gasolina=G :");
    scanf("%c", &combustivel);
    
    printf("quntos litros de combustivel ? : ");
    scanf("%f", &litros);
  
    if(combustivel == 'A' || combustivel == 'a'){
        total = litros * 2.90;
        
        if(litros > 20)
        total = (total * 0.95);
    }
    
        else{
        total = (total * 0.97);
        }
    
    if(combustivel == 'G' || combustivel == 'g'){
        total = litros * 3.30;
        
        if(litros > 20){
        total = (total * 0.94);    
        }
        
        else{
            total = (total * 0.96);
        }
    }    
    
    printf("O preço final sera de %.2f", total);
    return 0;
}

//14
#include <stdio.h>

int main()
{
    int idadehomem1, idadehomem2, idademulher1, idademulher2;
    int HVelho, HNovo, MVelha, MNova;
    int somaIdade, produtoIdade;
    
    printf("Digite a idade do primeiro homem: ");
    scanf("%d", &idadehomem1);
    
    printf("Digite a idade do segundo homem: ");
    scanf("%d", &idadehomem2);
    
    printf("Digite a idade da primeira mulher: ");
    scanf("%d", &idademulher1);
    
    printf("Digite a idade da segunda mulher: ");
    scanf("%d", &idademulher2);

    if(idadehomem1 > idadehomem2){
        
        HVelho = idadehomem1;
        HNovo = idadehomem2;
    }
    
    else{
        
        HVelho = idadehomem2;
        HNovo = idadehomem1;
    }
    
    if(idademulher1 > idademulher2){
        
        MVelha = idademulher1;
        MNova = idademulher2;
    }
    
    else{
        
        MVelha = idademulher2;
        MNova = idademulher1;
    }
    
    printf("soma do homem mais velho com a mulher mais nova é de: %d\n", somaIdade = (HVelho + MNova));
    
    printf("produto da idade da mulher mais velha com a do homem mais novo é de: %d\n", produtoIdade = (MVelha * HNovo));
    
    return 0;
}

//15

#include <stdio.h>
 
int main()
{
    float preçoMorangos, preçosMaças;
    float kgDeMorangos, kgDeMaças;
    float preçototal;
    
    printf("digite a quantia de kgs de morangos: ");
    scanf("%f", &kgDeMorangos);
    
    printf("digite a quantia de kgs de maçãs: ");
    scanf("%f", &kgDeMaças);
    
    if(kgDeMorangos < 5 ){
        preçoMorangos = 2.50;
    }
    
    else{
        preçoMorangos = 2.20;
    }
    
    if(kgDeMaças < 5){
    preçosMaças = 1.80;
    }
    
    else{
        preçosMaças = 1.50;
    }
    
    printf("O valor a ser pago pelo cliente é de: %.2f", preçototal = (preçoMorangos * kgDeMorangos) + (preçosMaças + kgDeMaças));
    
    return 0;
}

//7
#include <stdio.h>

int main()
{
    
    float valor1, valor2;
    
    printf("digite o primeiro valor: ");
    scanf("%f", &valor1);
    
    printf("digite o segundo valor: ");
    scanf("%f", &valor2);
    
    if(valor1 > valor2)
{
    printf("%0.2f , %0.2f", valor1, valor2);
}
    else
{
    printf("%0.2f , %0.2f", valor2, valor1);
}
    
    return 0;
}

//8
#include <stdio.h>
int main()

{
    float salarioHora;
    int horasMes;
    
    printf("digite o valor do salario por hora: ");
    scanf("%f", &salarioHora);

    printf("digite a quantidade de horas no mes: ");
    scanf("%d", &horasMes);

    if ((horasMes/4) > 40)
{
    printf("o salario total do funcionamento sera de: %0.2f", ( 160 * salarioHora ) + ((((horasMes / 4) % 40) * 4) * (salarioHora / 2)));
}
    else
{
    printf("O salario total sera de: %0.2f ", (salarioHora * horasMes));
}

    return 0;
} 

//9
#include <stdio.h>

int main()
{
    float salarioFixo, valorVendas;
    
    printf("digite o salario fixo: ");
    scanf("%f", &salarioFixo);
    
    printf("digite o valor total de vendas: ");
    scanf("%f", &valorVendas);
    
    if(valorVendas > 1500)
    {
        printf("o valor total do seu salario é de: %0.2f", salarioFixo + (1500 * 0.3) + ((valorVendas - 1500) * 0.5));
    }
    else
    {
        printf("o valor total do seu salario é de: %0.2f", salarioFixo + (valorVendas * 0.3));
    }
    return 0;
}

//10
#include <stdio.h>

int main()
{
    int numConta;
    float saldo, debito, credito, saldoAtual;
    
    printf("informe o número da conta: ");
    scanf("%d", &numConta);
    
    printf("infrme o saldo da conta: ");
    scanf("%f", &saldo);
    
    printf("informe o debito da conta: ");
    scanf("%f", &debito);
    
    printf("informe o credito da conta: ");
    scanf("%f", &credito);
    
    saldoAtual = (saldo - debito + credito);
    
    printf("O saldo atual da conta é R$ %.2f\n", saldoAtual);
    
    if(saldoAtual >=0)
{
    printf("Saldo Positivo");
}    
    else
{
    printf("Saldo Negativo");
}    
    return 0;
}

//11
#include <stdio.h>

int main()
{
    int qtdAtual, qtdMax, qtdMin;
    float qtdMedia;
    
    printf("informe  quantidade atual em estoque: ");
    scanf("%d", &qtdAtual);
    
    printf("infrme quantidade maxima em estoque: ");
    scanf("%d", &qtdMax);
    
    printf("informe  quantidade minima em estoque: ");
    scanf("%d", &qtdMin);
    
    qtdMedia = ((qtdMax + qtdMin) /2);
    
    printf("A quantidade média é de: %.2f\n", qtdMedia);
    
    if(qtdAtual >= qtdMedia)
{
    printf("Não efetuar compra");
}    
    else
{
    printf("Efetuar compra");
}    
    return 0;
}


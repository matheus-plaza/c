//1

#include <stdio.h>

int main()
{
    float numero;

    printf("digite um numero: ");
    scanf("%f", &numero);
    
    if(numero > 10)
    {
        printf("O NÚMERO É MAIOR QUE 10!\n");
    } 
    else 
    {
        printf("O NÚMERO NÃO É MAIOR QUE 10\n");
    }

    return 0;
}

//2
#include <stdio.h>

int main()
{
    float numero;
    
    printf("digite um numero");
    scanf("%f", &numero);
    
    if(numero>=0)
{
    printf("O NÚMERO É POSITIVO");
}
    
    else
{
    printf("O NÚMERO NÃO É POSITIVO");
}
    return 0;
}

//3
#include <stdio.h>

int main()
{
    int qtdMacas;
    printf("digite a qauntia de maçãs: ");
    scanf("%d", &qtdMacas);
    if(qtdMacas <= 12)
    {
        printf("o preço é de: %0.2f\n", qtdMacas * 1.3);
    }
    else
    {
        printf("o preço é de: %0.2f\n", qtdMacas * 1.0);
    }
    return 0;
}

//4
#include <stdio.h>

int main()
{
    
    float notas1a, notas2a, media;
    
    printf("digite a nota da primeira prova: ");
    scanf("%f", &notas1a);
    
    printf("digite a nota da segunda prova: ");
    scanf("%f", &notas2a);
    
    media = ((notas1a + notas2a) / 2);
    
    if(media > 6)
{
    printf("aluno aprovado");
}
    else
{
    printf("aluno reprovado");
}
    printf("sua nota foi de: %0.2f\n", media);
    
    return 0;
}

//5
#include <stdio.h>

int main()
{
    
    float anoAtual, anoNascimento;
    
    printf("digite o ano de seu nascimento: ");
    scanf("%f", &anoNascimento);
    
    printf("digite o ano atual: ");
    scanf("%f", &anoAtual);
    
    if((anoAtual - anoNascimento)>= 16)
{
    printf("Você pode votar");
}
    else
{
    printf("Você não pode votar");
}
    
    return 0;
}

//6
#include <stdio.h>

int main()
{
    
    float valor1, valor2;
    
    printf("digite o primeiro valor: ");
    scanf("%f", &valor1);
    
    printf("digite o segundo valor: ");
    scanf("%f", &valor2);
    
    if(valor1 > valor2)
{
    printf("O primeiro valor é maior");
}
    else
{
    printf("O segundo valor é maior");
}
    
    return 0;
}

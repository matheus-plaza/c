//1
#include <stdio.h>

int main()
{
    int num, i = 1;
    
    printf("Digite um númeropara ver a tabuada do mesmo: ");
    scanf("%d", &num);
    
    while(i <= 10){
        printf("a tabuada de %d x %d é = %d\n", num, i, num * i);
        i++;
    }

    return 0;
}

//2
#include <stdio.h>

int main()
{
    int num;
    
    do{
    printf("Digite um número: ");
    scanf("%d", &num);
    }while(num < 1);
    
        if(num % 2 == 0){
        printf("este numero é par");
        }
        
        else{
            printf("numero é ímpar");
        }
    
    return 0;
}

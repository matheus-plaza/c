//1
#include <stdio.h>

int main()
{
    float num1, num2, soma, subtracao;
   
   printf("Digite um número 1: \t");
   scanf("%f",&num1);
   
   printf("Digite um número 2: \t");
   scanf("%f",&num2);
   
   soma = num1 + num2;
   subtracao = num1 - num2;
   
   printf("Soma: %0.2f \n", soma);
   printf("Subtração: %0.2f \n", subtracao);
  
   return 0;

}

//2
#include <stdio.h>

int main()
{
    float num1, num2, soma, subtracao, divisao, multiplicacao;
   
   printf("Digite um número 1: \t");
   scanf("%f",&num1);
   
   printf("Digite um número 2: \t");
   scanf("%f",&num2);
   
   soma = num1 + num2;
   subtracao = num1 - num2;
   divisao = num1 / num2;
   multiplicacao = num1 * num2;
   
   printf("Soma: %0.2f \n", soma);
   printf("Subtração: %0.2f \n", subtracao);
   printf("Divisão: %0.2f \n", divisao);
   printf("multiplicacao: %0.2f \n", multiplicacao);
   return 0;

}

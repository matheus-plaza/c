//1
#include <stdio.h>

int main()
{
    float num1, num2, soma, subtracao;
   
   printf("Digite um número 1: \t");
   scanf("%f",&num1);
   
   printf("Digite um número 2: \t");
   scanf("%f",&num2);
   
   soma = num1 + num2;
   subtracao = num1 - num2;
   
   printf("Soma: %0.2f \n", soma);
   printf("Subtração: %0.2f \n", subtracao);
  
   return 0;

}

//2
#include <stdio.h>

int main()
{
    float num1, num2, soma, subtracao, divisao, multiplicacao;
   
   printf("Digite um número 1: \t");
   scanf("%f",&num1);
   
   printf("Digite um número 2: \t");
   scanf("%f",&num2);
   
   soma = num1 + num2;
   subtracao = num1 - num2;
   divisao = num1 / num2;
   multiplicacao = num1 * num2;
   
   printf("Soma: %0.2f \n", soma);
   printf("Subtração: %0.2f \n", subtracao);
   printf("Divisão: %0.2f \n", divisao);
   printf("multiplicacao: %0.2f \n", multiplicacao);
   return 0;

}

\\3
#include <stdio.h>

int main()
{
   float kms,consumo,media;
   
    printf("Digite a distacia percorrida (km): \n");
    scanf("%f", &kms);
    
    printf("Quantidade de litros gasto (l): \n");
    scanf("%f", &consumo);
    
    media = kms/consumo;
    
    printf("Sua media e de: \n");
    printf("%.3f,km/l\n", media);
    
    return 0;
}

// 4
#include <stdio.h>

int main()
{
      char nome[20];
      float salarioFixo, totalVendas, salarioTotal;
      
      printf ("nome do vendedor: ");
      scanf ("%s", nome);
      
      printf ("salario fixo: ");
      scanf ("%f", &salarioFixo);
      
      printf ("total em vendas: ");
      scanf ("%f", &totalVendas);
      
      salarioTotal = salarioFixo + 0.15 * totalVendas;
      
      printf("Vendedor: %s\n", nome);
      printf("Salário fixo: %0.2f\n", salarioFixo);
      printf("Salário total: %0.2f", salarioTotal);

    return 0;
}

//5

#include <stdio.h>

int main()
{
    char nome[20];
    float nota1, nota2, nota3, media;
    
    printf("nome: ");
    scanf("%s", nome);
    
    printf("nota da prova 1: ");
    scanf("%f", &nota1);
    
    printf("nota da prova 2: ");
    scanf("%f", &nota2);
    
    printf("nota da prova 3: ");
    scanf("%f", &nota3);
    
    media = ((nota1 + nota2 + nota3) / 3);
    
    printf("Aluno: %s\n", nome);
    printf("Nota media: %0.2f\n", media);
    
    return 0;
}

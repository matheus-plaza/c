//1
#include <stdio.h>

int main()
{
    float precocusto, acress, valvenda;
    
    printf("Digite o preço de custo do produto: ");
    scanf("%f", &precocusto);
    
    printf("Digite o percentual de acressimo: ");
    scanf("%f", &acress);
    
    valvenda = precocusto + precocusto * (acress / 100);
    
    printf("O valor de venda do produto é de: %.2f", valvenda);

    return 0;
}

//2
#include <stdio.h>

int main()
{
    float  valdeposito, valtotal;
    
    printf("Digite o valor depositado: ");
    scanf("%f", &valdeposito);
    
    valtotal = valdeposito + valdeposito / 200;
    
    printf("O valor total é de: %.2f", valtotal);

    return 0;
}

//3
#include <stdio.h>

int main()
{
    float  A, B;
    
    printf("Digite o valor de a: ");
    scanf("%f", &A);
    
    printf("Digite o valor de b: ");
    scanf("%f", &B);
    
    printf("O valor total de a trocado é %.2f\n", B);
    printf("O valor total de b trocado é %.2f", A);

    return 0;
}

//4
#include <stdio.h>

int main()
{
    float  valProduto, percentualDesc, valDesc, valTotal;
    
    printf("Digite o valor do produto: ");
    scanf("%f", &valProduto);
    
    printf("Digite a porcentagem de desconto: ");
    scanf("%f", &percentualDesc);
    
    valDesc = valProduto * (percentualDesc / 100);
    valTotal = valProduto - valDesc;
    
    printf("O valor do desconto é %.2f\n", valDesc);
    printf("O valor total será de %.2f", valTotal);

    return 0;
}

//5

#include <stdio.h>

int main()
{
    float  num1, num2, num3;
    
    printf("Digite o valor do primeiro numero: ");
    scanf("%f", &num1);
    
    printf("Digite o valor do segundo numero: ");
    scanf("%f", &num2);
    
    printf("Digite o valor do terceiro numero: ");
    scanf("%f", &num3);
    
    if(num1 > num2 && num1 > num3){
        printf("o numero %.2f e maior\n", num1);
    }
        
        else if(num2 > num3 && num2 > num1){
        printf("o numero %.2f e maior\n", num2);
        }
        
        else{ 
        printf("o numero %.2f e maior\n", num3);
    }
    
    if(num1 < num2 && num1 < num3){
        printf("o numero %.2f e menor", num1);
        }
        
        else if(num2<num1 && num2 < num3){
        printf("o numero %.2f e menor", num2);
        }
        
        else{
        printf("o numero %.2f e menor", num3);
        }
    

    return 0;
}

//6 
#include <stdio.h>

int main()
{
    float  num1, num2;
    
    printf("Digite o valor do primeiro numero: ");
    scanf("%f", &num1);
    
    printf("Digite o valor do segundo numero: ");
    scanf("%f", &num2);
    
    if(num1 < num2){
        printf("%.2f, %.2f", num1, num2);
    }
        
    else{
        printf(" %.2f, %.2f", num2, num1);
        }
      
    return 0;
}
//7
#include <stdio.h>

int main()
{
    int atualEstoque, maxEstoque, minEstoque;
    float  media;
    
    printf("Digite a quantidade atual em estoque: ");
    scanf("%d", &atualEstoque);
        
    printf("Digite a quantidade maxima do estoque: ");
    scanf("%d", &maxEstoque);
    
    printf("Digite a quantidade minima do estoque: ");
    scanf("%d", &minEstoque);
    
    media = (maxEstoque + minEstoque) / 2;
    
    printf("a quantidade media e de %.2f\n", media);
    
    {
    if(atualEstoque >= media)
        printf("Não efetuar compra");
    
        
    else
        printf("Efetuar compra");
    }
      
    return 0;
}
